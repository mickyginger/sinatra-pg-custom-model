<form action="/quotes/<%= @quote.id %>" method="POST">

  <input type="hidden" name="_method" value="PUT">

  <div class="form-group">
    <input type="text" name="quote[text]" placeholder="This is a quote..." class="form-control" value="<%= @quote.text %>">
  </div>

  <div class="form-group">
    <input type="text" name="quote[author]" placeholder="Maxwell P. Strong" class="form-control" value="<%= @quote.author %>">
  </div>

  <div class="form-group">
    <input type="submit" value='Save Quote' class="btn btn-default">
  </div>

</form>
